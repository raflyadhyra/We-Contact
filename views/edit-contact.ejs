<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Ubah Data Kontak</h2>

      <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
            <ul>
                <% errors.forEach(error => { %>
                    <li> <%= error.msg %>  </li>
                 <% }) %>
            </ul>
          </div>
      <% } %>
      
      <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%=contact._id%>" />
        <input type="hidden" name="oldNama" value="<%= (contact.oldNama) ? contact.oldNama : contact.nama %>">
        <div class="mb-3">
          <label for="Nama" class="form-label">Nama</label>
          <input type="text" class="form-control" id="Nama" name="nama" aria-describedby="namaHelp" required value="<%= contact.nama %>" />
        <div class="mb-3">
          <label for="Email" class="form-label">Email</label>
          <input type="email" class="form-control" id="Email" name="email" aria-describedby="emailHelp" value="<%= contact.email %>" />
        <div class="mb-3">
          <label for="No hp" class="form-label">No HP</label>
          <input type="text" class="form-control" id="nohp" name="nohp" aria-describedby="noHPHelp" required  value="<%= contact.nohp %>" />
                <button type="submit" class="btn btn-primary mt-3">Ubah Data Kontak</button>
      </form>
    </div>
  </div>
</div>
